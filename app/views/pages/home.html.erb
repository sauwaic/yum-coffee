<div class="wrapper text-center">
  <%= image_tag 'yum_coffee.png' %>
</div>

<div class="wrapper-search">
  <div class="search-content padded">

    <div class="search-bar">
      <form action="" class="search-bar-form">
        <input type="text" class="search-bar-input" placeholder="Search something">
        <button type="submit" class="search-bar-btn">
          <i class="fa fa-search"></i>
        </button>
      </form>
    </div>

    <%= link_to 'View all coffee shops', coffee_shops_path, class: 'view-all-link' %>
  </div>
</div>

<br>

<div class="wrapper-inspirations">
  <div class="row">
    <% @coffee_shops.each do |coffee_shop| %>
    <% coffee_shop.photos.each do |photo| %>
    <div class="col-xs-6 col-md-4">
      <div class="inspirations-card">
        <%= link_to cl_image_tag(photo.path, width: 300, height: 300, crop: :fill), coffee_shop_path(coffee_shop) %>
        <div class="inspirations-card-words">
          <p> <%= coffee_shop.name %> </p>
          <p> <%= coffee_shop.district %> </p>
        </div>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>



